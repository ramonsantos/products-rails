<p id="notice"><%= notice %></p>

<h1>Products</h1>

<h2>Search</h2>

<%= form_tag(products_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<h2>Report</h2>
<%= link_to 'Products Report', products_report_path %>

<h2>Listing Products</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Bar Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.sku %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.bar_code %></td>
        <td><%= link_to 'Show', product_path(product.id) %></td>
        <td><%= link_to 'Edit', edit_product_path(product.id) %></td>
        <td><%= link_to 'Destroy', product_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
